<h1>Manhattan Recipes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Recipe</th>
      <th># Cherries</th>
      <th>On the Rocks?</th>
      <th>Establishment</th>
      <th>City</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manhattans.each do |manhattan| %>
      <tr>
        <td><%= manhattan.name %></td>
        <td><%= manhattan.recipe %></td>
        <td><%= manhattan.num_cherries %></td>
        <td><%= manhattan.rocks %></td>
        <td><%= manhattan.establishment %></td>
        <td><%= manhattan.city %></td>
        <td><%= manhattan.notes %></td>
        <td><%= link_to 'Show', manhattan %></td>
        <td><%= link_to 'Edit', edit_manhattan_path(manhattan) %></td>
        <td><%= link_to 'Destroy', manhattan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Cache Stats</h3>

<table>
  <tr>
    <th>Metric</th>
    <th>Value</th>
  </tr>
  <tr>
    <td>Cache hits:</td>
    <td><%= @stats['get_hits'] %></td>
  </tr>
  <tr>
    <td>Cache misses:</td>
    <td><%= @stats['get_misses'] %></td>
  </tr>
  <tr>
    <td>Cache flushes:</td>
    <td><%= @stats['cmd_flush'] %></td>
  </tr>
</table>

